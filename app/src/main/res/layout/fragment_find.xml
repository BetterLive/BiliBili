<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
>
    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="@dimen/dp_4"
            android:layout_margin="@dimen/dp_10"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
        >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_search"
                    android:tint="@color/black_alpha_160"
            />
            <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="@string/search_bar_hint"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:background="@null"
            />
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_img_scan_qr_code"
                    android:tint="@color/black_alpha_160"
            />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_everyone"
            android:layout_marginLeft="@dimen/dp_10"
            style="@style/TextTitle"
    />
    <com.bilibili.lingxiao.widget.LaybelLayout
            android:id="@+id/laybel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:text_background="@drawable/radius_text_background"
            app:line_padding="10"
    >

    </com.bilibili.lingxiao.widget.LaybelLayout>
</LinearLayout>